<h1><%= @chapter.name %></h1>
<ul>
  <% @chapter.sections.each do |section| %>
  <li>
    <%= section.name %>
    <ul>
      <% section.lessons.each do |lesson| %>
      <li><%= lesson.name %></li>
      <% end %>
    </ul>
  </li>
  <% end %>
</ul>
<%= link_to "Create A New Section", new_chapter_section_path(@chapter) %>
<p><%= link_to "Return to chapters", chapters_path %></p>
